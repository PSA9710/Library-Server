        <!-- Adauga cerc pt user -->
        <!-- Adauga chestii faine, gen cum ai tu la new tab pe chrome-->
        <StackPanel VerticalAlignment="Center" >
            <Grid>
                <Ellipse Height="207"  Width="207">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfilePicture" ImageSource="c:\users\test\desktop\1.jpeg" />
                    </Ellipse.Fill>
                </Ellipse>
                <materialDesign:PackIcon x:Name="NoProfilePicture" Kind="AccountCircle" Width="250" Height="250" HorizontalAlignment="Stretch" />
            </Grid>
            <Label x:Name="LabelTimer" Content="18:40" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontWeight="ExtraBold"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label x:Name="LabelGreeting" FontSize="48">Good Evening,</Label>
                <TextBox x:Name="TextBoxNameInput" VerticalContentAlignment="Top" VerticalAlignment="Bottom" Margin="0,0,0,10" FontSize="48" MinWidth="150" Height="56" PreviewKeyDown="TextBoxNameInput_PreviewKeyDown" TextChanged="TextBoxNameInput_TextChanged"/>
                <Label FontSize="48">.</Label>
            </StackPanel>
        </StackPanel>
        <materialDesign:Snackbar x:Name="SnackbarMaximumCharacters" MessageQueue="{materialDesign:MessageQueue}" VerticalContentAlignment="Bottom" MaxWidth="600" />
    </Grid>
